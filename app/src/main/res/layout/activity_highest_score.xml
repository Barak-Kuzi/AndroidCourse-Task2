<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iron_swords_background"
    tools:context=".HighestScoreGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/highestScoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/_10_highest_score"
            android:textSize="36sp"
            android:textColor="#F6FDFD"
            android:textStyle="bold"
            android:background="#80000000"/>

        <FrameLayout
            android:id="@+id/frameScores"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/frameGoogleMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menuButtonHS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/menu"
            android:textSize="20sp"
            android:backgroundTint="#65EFCEB1"
            android:textColor="@android:color/black"
            android:textStyle="bold|italic"/>

    </LinearLayout>
</RelativeLayout>