<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iron_swords_background"
    tools:context=".GameMenu"
    >

    <TextView
        android:id="@+id/labelMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/game_modes"
        android:textSize="50sp"
        android:textColor="#F6FDFD"
        android:textStyle="bold"
        android:background="#80000000">
    </TextView>

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelMode"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/normalModeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playing_normal_mode"
            android:textSize="40sp"
            android:backgroundTint="#65EFCEB1"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fastModeBtn"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/normalModeBtn"
            android:layout_marginTop="20dp"
            android:text="@string/playing_fast_mode"
            android:textSize="40sp"
            android:backgroundTint="#65EFCEB1"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sensorModeBtn"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fastModeBtn"
            android:layout_marginTop="20dp"
            android:text="@string/playing_sensor_mode"
            android:textSize="40sp"
            android:backgroundTint="#65EFCEB1"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:layout_centerInParent="true"
        android:text="@string/top_10"
        android:textSize="50sp"
        android:layout_marginTop="40dp"
        android:textColor="#F6FDFD"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:background="#80000000">
    </TextView>

    <RelativeLayout
        android:id="@+id/menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@id/title2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/highestScoreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/highest_score"
            android:textSize="40sp"
            android:backgroundTint="#65EFCEB1"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>