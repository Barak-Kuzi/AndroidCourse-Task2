<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iron_swords_background"
    tools:context=".GameActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/menu"
        android:layout_centerInParent="true"
        android:text="@string/game_modes"
        android:textSize="50sp"
        android:layout_marginBottom="45dp"
        android:textColor="#F6FDFD"
        android:textStyle="bold">
    </TextView>

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true" >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/normalModeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playing_nnormal_mode"
            android:textSize="40sp"
            android:backgroundTint="#65EFCEB1"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fastModeBtn"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/normalModeBtn"
            android:layout_marginTop="20dp"
            android:text="@string/playing_nfast_mode"
            android:textSize="40sp"
            android:backgroundTint="#65EFCEB1"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sensorModeBtn"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fastModeBtn"
            android:layout_marginTop="20dp"
            android:text="@string/playing_nsensor_mode"
            android:textSize="40sp"
            android:backgroundTint="#65EFCEB1"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:layout_centerInParent="true"
        android:text="@string/top_10"
        android:textSize="50sp"
        android:layout_marginTop="45dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:textStyle="bold">
    </TextView>

    <RelativeLayout
        android:id="@+id/menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@id/title2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/highestScoreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/highest_score"
            android:textSize="40sp"
            android:backgroundTint="#65EFCEB1"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>